<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".DesignActivity">

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_name"
        android:layout_toRightOf="@+id/lbl_name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lbl_address"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_name"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_address"
        android:layout_toRightOf="@+id/lbl_address"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/lbl_country"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_address"
        android:layout_marginTop="20dp"
        android:text="Country"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spn_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_address"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/lbl_country"
        android:textSize="18sp" />


    <TextView
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/lbl_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_country"
        android:layout_marginTop="20dp"
        android:text="Gender" />

    <RadioGroup
        android:id="@+id/rdg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_country"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/lbl_gender"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rdb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:id="@+id/lbl_education"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lbl_gender"
        android:textSize="18sp"
        android:text="Education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <CheckBox
        android:textSize="18sp"
        android:layout_below="@+id/lbl_education"
        android:id="@+id/chb10"
        android:text="10th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox

        android:textSize="18sp"
        android:layout_below="@+id/chb10"
        android:id="@+id/chb12"
        android:text="12th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:textSize="18sp"
        android:layout_below="@+id/chb12"
        android:id="@+id/chb_graduation"
        android:text="Graduation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:textSize="18sp"
        android:layout_below="@+id/chb_graduation"
        android:id="@+id/chb_pg"
        android:text="PG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="30dp"
        android:layout_below="@+id/chb_pg"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="Send"
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>